@model DeleteProductViewModel

 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between mb-2 align-content-center">
                <div class="col-10 mx-auto">
                    <h1>Ürün Silme</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-10 mx-auto">
                        <!--Ürün Bilgileri-->
                        <div class="card card-success">
                            <div class="card-header">
                                <h3 class="card-title">Ürün Bilgileri</h3>
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div>
                                            <label>Id:</label>
                                            <span>@Model.Id</span>
                                        </div>
                                        <div>
                                            <label>Ürün:</label>
                                            <span>@Model.Name</span>
                                        </div>
                                        <div>
                                            <label>Fiyat:</label>
                                            <span>@($"{Model.Price:C0}")</span>
                                        </div>
                                        <div>
                                            <label>Oluşturulma Tarihi:</label>
                                            <span>@Model.CreatedDate</span>
                                        </div>
                                        <div>
                                            <label>Son Güncelleme Tarihi:</label>
                                            <span>@(Model.ModifiedDate == DateTime.Now ? "Bugün": Model.ModifiedDate)</span>
                                        </div>
                                    </div>
                                 </div>
                             </div>
                            <!-- Silme Butonları -->
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a 
                                    asp-area="Admin"
                                    asp-controller="Product"
                                    asp-action="Index"
                                    class="btn btn-info">Vazgeç</a>
                                <a asp-area="Admin" asp-controller="Product" asp-action="SoftDelete" asp-route-id="@Model.Id"
                                    class="btn btn-warning">Çöp Kutusuna Gönder</a>
                                <a
                                    asp-area="Admin" asp-controller="Product" asp-action="HardDelete" asp-route-id="@Model.Id"  
                                    type="submit" class="btn btn-danger">Kalıcı Olarak Sil</a>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- /.content-wrapper -->


@section Styles{
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- dropzonejs -->
    <link rel="stylesheet" href="~/admin/plugins/dropzone/min/dropzone.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/admin/plugins/summernote/summernote-bs4.min.css">
}

@section Scripts{
    <!-- dropzonejs -->
    <script src="~/admin/plugins/dropzone/min/dropzone.min.js"></script>
    <!-- Summernote -->
    <script src="~/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
      $(function () {
        // Summernote
        $('#Properties').summernote()
      })
    </script>
}