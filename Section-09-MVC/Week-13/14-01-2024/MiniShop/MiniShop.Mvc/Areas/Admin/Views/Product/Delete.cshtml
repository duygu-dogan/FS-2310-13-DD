@model ProductViewModel

<div class="card mb-3 w-50 m-auto p-4">
    <div class="row g-0">
        <div class="col-md-4 py-2 ps-2">
            <img src="~/images/@Model.ImageUrl" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Properties</p>
                <p class="card-text"><small class="text-body-secondary">@Model.Price</small></p>
            </div>
            <div class="row me-3 mt-3 ms-1">
            <div class="col-md-6">
                <a asp-area="Admin"
                   asp-action="HardDelete"
                   asp-controller="Product"
                   asp-route-id="@Model.Id"
                   class="btn btn-danger">Kalıcı Olarak Sil</a>
            </div>
            <div class="col-md-6">
                <a asp-area="Admin"
                   asp-action="SoftDelete"
                   asp-controller="Product"
                   asp-route-id="@Model.Id"
                   class="btn btn-warning">Çöpe Gönder</a>
            </div>
            </div>
        </div>
    </div>
</div>
