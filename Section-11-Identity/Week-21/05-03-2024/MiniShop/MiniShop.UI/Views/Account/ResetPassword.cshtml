@model ResetPasswordViewModel

<div class="container w-25">
    <h2 class="text-center mb-3 font-weight-bold">Yeni Şifre Belirleme</h2>
    <hr />
    <form asp-area="" asp-controller="Account" asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Token" />
        <div class="text danger" asp-validation-summary="All"></div>
        <div class="form-group mb-2">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="RePassword"></label>
            <input class="form-control" asp-for="RePassword" />
        </div>
        <div>
            <button type="submit" class="btn btn-success">Şifreyi Değiştir</button>
            <a href="/" type="submit" class="btn btn-secondary">Vazgeç</a>
        </div>
    </form>
</div>
