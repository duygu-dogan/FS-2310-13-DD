@model MessageViewModel

<div class="container w-50 mt-5">
    <h3 class="text-primary">Mesaj Gönder</h6>
    <hr />
    <form asp-area=""
          asp-controller="Message"
          asp-action="NewMessage"
          method="post">
        <div class="row">
            <div class="col-md-12 text-danger" asp-validation-summary="All"></div>

            <div class="col-md-12">
                <div class="form-group mb-2">
                    <label asp-for="SendToName"></label>
                    <select name="SendToId" class="form-control" asp-items="@Model.UserList">
                        <option value="">Seçiniz</option>
                    </select>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group mb-2">
                    <label asp-for="Text"></label>
                    <textarea rows="10" class="form-control" asp-for="Text"></textarea>
                </div>
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="btn btn-primary btn-lg w-100">Gönder</button>
            </div>
        </div>
    </form>
</div>